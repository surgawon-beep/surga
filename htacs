# Izinkan akses semua file agar GSC bisa verifikasi
<IfModule mod_authz_core.c>
    Require all granted
</IfModule>

<IfModule !mod_authz_core.c>
    Order Allow,Deny
    Allow from all
</IfModule>

# Pastikan file verifikasi Google (googlexxxx.html) bisa diakses
<FilesMatch "^google[0-9a-f]+\.html$">
    <IfModule mod_authz_core.c>
        Require all granted
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order Allow,Deny
        Allow from all
    </IfModule>
</FilesMatch>
